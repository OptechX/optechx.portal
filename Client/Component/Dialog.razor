@using Microsoft.AspNetCore.Components

<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-left">
                <img src="@AppIcon" alt="Icon Image" style="width: 64px; height: 64px;" />
                <h5 class="modal-title">@AppPublisher @AppName</h5>
                <button type="button" class="close"
                        @onclick="Cancel">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <p>@AppDescription</p>
                <p><strong>Arch:</strong>&nbsp;@AppArch</p>
                <p><strong>Languages:</strong>&nbsp;@AppLanguage</p>
                <p>@AppCopyright</p>
            </div>
            <div class="modal-footer">
                @switch (Type)
                {
                    case Category.Okay:
                        <button type="button"
                                class="btn btn-primary"
                                @onclick="Ok">
                            OK
                        </button>
                        break;
                    case Category.SaveNot:
                        <button type="button"
                                class="btn btn-primary"
                                @onclick="Ok">
                            Save
                        </button>
                        <button type="button"
                                class="btn btn-warning"
                                @onclick="Cancel">
                            Don't Save
                        </button>
                        break;
                    case Category.DeleteNot:
                        <button type="button"
                                class="btn btn-danger"
                                @onclick="Ok">
                            Delete
                        </button>
                        <button type="button"
                                class="btn btn-warning"
                                @onclick="Cancel">
                            Don't Delete
                        </button>
                        break;
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string? AppIcon { get; set; }
    [Parameter] public string? AppPublisher { get; set; }
    [Parameter] public string? AppName { get; set; }
    [Parameter] public string? AppDescription { get; set; }
    [Parameter] public string? AppArch { get; set; }
    [Parameter] public string? AppLanguage { get; set; }
    [Parameter] public string? AppCopyright { get; set; }
    [Parameter] public Category Type { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private async Task Cancel()
    {
        await OnClose.InvokeAsync(false);
    }

    private async Task Ok()
    {
        await OnClose.InvokeAsync(true);
    }

    public enum Category
    {
        Okay,
        SaveNot,
        DeleteNot
    }
}

